<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          xmlns:tools="http://schemas.android.com/tools"
          package="protego.bluelight.screenfilter">

    <uses-permission android:name="android.permission.SYSTEM_ALERT_WINDOW" />
	<uses-permission android:name="android.permission.REQUEST_IGNORE_BATTERY_OPTIMIZATIONS" />
    <uses-permission android:name="cyanogenmod.permission.PUBLISH_CUSTOM_TILE" />
	<uses-permission android:name="android.permission.FOREGROUND_SERVICE" />



    <application
	    android:allowBackup="true"
	    android:fullBackupContent="@xml/full_backup_contents"
	    android:name="protego.bluelight.screenfilter.BlackbulbApplication"
	    android:icon="@mipmap/ic_launcher"
	    android:roundIcon="@mipmap/ic_launcher_circle"
	    android:label="Night Screen"
	    android:persistent="true"
	    android:supportsRtl="false"
	    android:theme="@style/AppTheme.Light"
	    tools:ignore="GoogleAppIndexingWarning">
		<meta-data
			android:name="com.google.android.gms.ads.APPLICATION_ID"
			android:value="test ad unit" />

        <activity
            android:name="protego.bluelight.screenfilter.ui.MainActivity"
            android:finishOnTaskLaunch="true"
            android:excludeFromRecents="true"
            android:launchMode="singleInstance"
            android:stateNotNeeded="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
	            <action android:name="android.service.quicksettings.action.QS_TILE_PREFERENCES" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>

            <meta-data android:name="android.app.shortcuts" android:resource="@xml/shortcuts"/>
        </activity>

	    <activity android:name="protego.bluelight.screenfilter.ui.shortcut.ToggleActivity"
		    android:label="@string/shortcut_label_switch"
		    android:icon="@mipmap/ic_shortcut_switch"
		    android:launchMode="singleInstance"
		    android:finishOnTaskLaunch="true"
		    android:excludeFromRecents="true"
		    android:theme="@style/AppTheme.Empty">
		    <intent-filter>
			    <action android:name="android.intent.action.MAIN" />
			    <action android:name="android.intent.action.CREATE_SHORTCUT"/>
		    </intent-filter>
	    </activity>

	    <service android:name="protego.bluelight.screenfilter.service.MaskService" android:process=":mask">
	        <intent-filter>
		        <action android:name="info.papdt.blackblub.IMaskServiceInterface"/>
	        </intent-filter>
	    </service>

	    <service
		    android:name="protego.bluelight.screenfilter.service.MaskTileService"
		    android:icon="@drawable/ic_brightness_2_white_36dp"
		    android:label="Night Screen"
		    android:permission="android.permission.BIND_QUICK_SETTINGS_TILE">
		    <intent-filter>
			    <action android:name="android.service.quicksettings.action.QS_TILE" />
		    </intent-filter>
	    </service>

	    <receiver android:name="protego.bluelight.screenfilter.receiver.ActionReceiver" android:exported="false">
		    <intent-filter>
			    <action android:name="info.papdt.blackbulb.ACTION_UPDATE_STATUS" />
			    <action android:name="info.papdt.blackbulb.ALARM_ACTION_START" />
			    <action android:name="info.papdt.blackbulb.ALARM_ACTION_STOP" />
		    </intent-filter>
	    </receiver>

    </application>

</manifest>